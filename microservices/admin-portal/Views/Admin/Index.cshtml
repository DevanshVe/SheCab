@model List<admin_portal.Models.DriverViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h1 class="mb-4">Pending Driver Verifications</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No pending verifications.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var driver in Model)
                {
                    <tr>
                        <td>@driver.Id</td>
                        <td>@driver.Name</td>
                        <td>@driver.Gender</td>
                        <td>@driver.Email</td>
                        <td>@driver.PhoneNumber</td>
                        <td>
                            <form asp-action="Verify" method="post">
                                <input type="hidden" name="id" value="@driver.Id" />
                                @if (!string.IsNullOrEmpty(driver.DocumentPath))
                                {
                                    <a href="http://localhost:8080/api/drivers/@driver.Id/document" target="_blank" class="btn btn-info btn-sm">View Doc</a>
                                }
                                <button type="submit" class="btn btn-success btn-sm">Verify Documents</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
